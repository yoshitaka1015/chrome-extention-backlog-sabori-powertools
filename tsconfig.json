{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@background/*": ["background/*"],
      "@content/*": ["content/*"],
      "@shared/*": ["shared/*"],
      "@sidepanel/*": ["sidepanel/*"],
      "@options/*": ["options/*"]
    }
  },
  "include": ["src/**/*"]
}
